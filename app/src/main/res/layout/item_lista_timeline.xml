<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/home_fragment"
    tools:context="com.example.vinicius.condominium.app.HomeActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="1dp"
        android:background="@android:color/white">

        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <com.vipul.hp_hp.timelineview.TimelineView
                android:id="@+id/timeline"
                android:paddingLeft="30dp"
                app:marker="@drawable/ic_input_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:marker_size="20dp"
                app:line_size="3dp"
                app:line="@color/colorLine"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtDataItemTimeline"
                    android:textColor="@color/colorLine"
                    android:text="16 Mai"
                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/txtHoraItemTimeline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="09:54"
                    android:layout_gravity="center"
                    android:textColor="@color/colorLine"
                    android:textSize="11dp"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txtDescricaoItemTimeline"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20dp"
                    android:paddingLeft="20dp"
                    android:text="Tá tudo pegando fogo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/txtNomeUsuarioItemTimeline"
                    android:textSize="15dp"
                    android:paddingLeft="20dp"
                    android:text="Seu Lunga"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/txtLocalizacao"
                    android:textSize="15dp"
                    android:paddingLeft="20dp"
                    android:text="Guarita do Térreo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


            </LinearLayout>

        </LinearLayout>

